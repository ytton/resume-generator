{
  "name": "resume-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://ytton.github.com/resume-generator",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-template-css && tsc && vite build",
    "deploy": "npm run generate-template-css && tsc && vite build && gh-pages -d dist",
    "generate-template-css": "node scripts/generateTemplateCSS.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postinstallmac": "git config core.hooksPath .husky && chmod 700 .husky/*",
    "prettierwrite": "prettier --write src/**/*.{vue,ts,js,tsx,jsx}",
    "prettiercheck": "prettier --check src/**/*.{vue,ts,js,tsx,jsx}",
    "eslint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{vue,ts,js,tsx}\" --fix",
    "commit": "git add . && git-cz"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.7",
    "@monaco-editor/react": "^4.7.0",
    "ahooks": "^3.8.0",
    "antd": "^5.17.0",
    "antd-img-crop": "^4.22.0",
    "array-move": "^4.0.0",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.11",
    "html2canvas": "1.0",
    "jotai": "^2.8.0",
    "jspdf": "^2.5.1",
    "lodash-es": "^4.17.21",
    "monaco-editor": "^0.52.2",
    "nanoid": "^5.0.7",
    "normalize.css": "^8.0.1",
    "quill": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "vite-plugin-static-copy": "^1.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-angular": "^17.0.3",
    "@commitlint/cz-commitlint": "^17.0.3",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.9.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "gh-pages": "^6.1.1",
    "husky": "^8.0.1",
    "inquirer": "^8.0.0",
    "jotai-devtools": "^0.10.0",
    "less": "^4.2.0",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.38",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "unocss": "^0.60.2",
    "vite": "^5.2.0"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "eslint --cache --fix"
    ],
    "*.{js,jsx,ts,tsx,md,html,css,lees,scss,sass}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
